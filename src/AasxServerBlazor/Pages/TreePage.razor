    static string getQualifiers(List<Qualifier> q, int col)
    {
        string ret = "";

        if (q != null && q.Count > 0)
        {
            if (col == 0)
                ret = "Qualifiers";
            if (col == 1)
            {
                ret = "";
                for (int i = 0; i < q.Count; i++)
                {
                    if (i != 0)
                        ret += ", ";
                    if (q[i].Type != null && q[i].Type != "")
                    {
                        ret += q[i].Type + " ";
                    }
                    if (q[i].Value != null && q[i].Value != "")
                    {
                        ret += "= " + q[i].Value;
                    }
                }
            }
        }
        return ret;
    }

